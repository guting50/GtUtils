<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.gt.utils.widget.BgTextView
        android:id="@+id/bgFrameLayout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:text="测试"
        android:textColor="#ffffff"
        app:corners_radius="30dp"
        app:corners_radius_checked="5dp"
        app:corners_radius_pressed="10dp"
        app:solid_color="@color/colorAccent"
        app:solid_color_checked="@color/colorPrimaryDark"
        app:solid_color_no_enabled="#80000000"
        app:solid_color_pressed="#ff5830F5"
        app:solid_end_color="#ff8B74E4"
        app:solid_end_color_checked="#ff8F5350"
        app:solid_end_color_no_enabled="#ffffffff"
        app:solid_end_color_pressed="#ff5830F5"
        app:solid_start_color="#ff5380F5"
        app:solid_start_color_checked="#ff8B74E4"
        app:solid_start_color_no_enabled="#ff000000"
        app:solid_start_color_pressed="#ff87b4E4" />

    <com.gt.utils.widget.BgFLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:focusableInTouchMode="true"
        app:corners_radius="30dp"
        app:solid_color="@color/colorAccent"
        app:solid_color_checked="@color/colorPrimaryDark"
        app:solid_color_no_enabled="#80000000"
        app:solid_color_pressed="#ff8B74E4" />

</LinearLayout>